<h1>Social Network Authentication</h1>

<% if current_user %>
    <%= link_to 'logout', logout_path, method: :delete %>
<% end %>

<%= link_to 'facebook', '/auth/facebook' %>
<%= link_to 'google', '/auth/google_oauth2' %>
<%= link_to 'twitter', '/auth/twitter' %>
<%= link_to 'wechat', '/auth/wechat' %>

<% if current_user %>
    <div class="page-header">
      <h1>Here is some info about you...</h1>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <ul>
          <li><strong>Name:</strong> <%= current_user.name %></li>
          <li><strong>EMAIL:</strong> <%= current_user.email %></li>
        </ul>
      </div>
    </div>
<% end %>

<hr>

<% @identities.each do |identity| %>
    <%= identity.provider %>:<br>
    <%= identity.email %>
    <%= identity.uid %>
    <%= identity.name %>
    <%= identity.accesstoken %>
    <hr>
<% end %>